#!/usr/bin/env zsh

if [[ $# -eq 1 ]]; then
  selected_dir=$1
else
  selected_dir=$(find ~/dotfiles ~/projects/arc ~/projects ~/projects/wellrested ~/Dropbox -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z "${selected_dir}" ]]; then
  exit 0
fi

name=$(basename "${selected_dir}" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s "${name}" -c ${selected_dir}
    exit 0
fi

if ! tmux has-session -t "${name}" 2> /dev/null; then
    tmux new-session -ds "${name}"  -c ${selected_dir}
fi

tmux switch-client -t "${name}"
