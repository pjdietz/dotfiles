let mapleader=" "

""" Plugins -------------------------------------------------------------------
set surround
set commentary

set showmode
set incsearch
set hlsearch

""" Key Maps ------------------------------------------------------------------

" Yank into +register by default
nmap <Leader>y "+y
vmap <Leader>y "+y
nmap <Leader>Y "+Y
nmap <Leader>yy "+yy

" Move lines up or down
xnoremap J :move '>+1<CR>gv=gv
xnoremap K :move '<-2<CR>gv=gv

" Clear search hightlight
nnoremap <leader><esc> :noh<CR>

" Yank to end of line
map Y y$

map <Leader>bd :bd<cr>
map <C-n> <Action>(NextTab)
map <C-p> <Action>(PreviousTab)
map <Leader>j :e#<cr>

map <Leader>rn <Action>(RenameElement)
map <Leader><Esc> <Action>(HideAllWindows)

map <Leader><Space> <Action>(GotoFile)
map <Leader>fi <Action>(FindInPath)
map <Leader>ft <Action>(RiderUnitTestQuickListPopupAction)

map gr <Action>(FindUsages)
map gd <Action>(GotoDeclaration)

nnoremap <Leader>R :source ~/.ideavimrc<cr>

" DataGrip
map <Leader>r <Action>(Console.Jdbc.Execute)

""" Options -------------------------------------------------------------------

set nu
set relativenumber
set showmode

set visualbell
set noerrorbellser
